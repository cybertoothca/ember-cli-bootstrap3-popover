<h3>Invoking Popover <code>show()</code></h3>

<div class="row">
  <div class="col-sm-4">
    {{#twbs-popover popoverTrigger="click" as |popover show|}}
      {{#popover.trigger}}
        <a href="javascript:void(0)">The Popover Is Bound To This Text</a>
      {{/popover.trigger}}
      {{#popover.content}}
        Click again to hide.
      {{/popover.content}}
      <div>
        <button class="btn btn-info" {{action show}}>
          Clicking This Button
          <br/>
          Will Show The Popover
        </button>
      </div>
    {{/twbs-popover}}
  </div>
  <div class="col-sm-8">
    {{!-- @formatter:off --}}
<pre>
</pre>
      {{!-- @formatter:on --}}
  </div>
</div>
